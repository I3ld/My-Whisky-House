<!DOCTYPE html>
<html lang="pl-PL">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" media='screen' href="/css/style.css" />
    <link rel="stylesheet" media='screen' href="/css/styleEdycjaProdukt.css" />
    <link rel="stylesheet" media='screen' href="/css/stylePost.css" />
    <script type="text/javascript" src="/js/edycjaPostValidator.js"></script>
    <title><%= pageTitle %></title>
</head>

<% include ../partials/page-start %>

    <main>
        <div class="errorsSpace">
            <label class="errors" id="errors"></label>
        </div>

        <div class="container">
            <div class="itemPost">
                    <div class="postInfo">
                    <img src="<%= post.UserPicture %>">
                    <div class="postDescribe">
                        <label class="text"><i><%= post.Text %><i></label><br>
                        <label class="author"><%= post.UserFirstName %> <%= post.UserLastName %></label> <br>
                        <label class="date"><%= post.Added_Date %></label> <br>
                        <label class="product">[<%= post.ProductName %> / <%= post.ProductVolume %>% / <%= post.ProductCapacity %>L / <%= post.ProductPrice %>z≈Ç]</label>
                    </div>
                </div>
        </div>
        <form name="myForm" action="/posts/<%= formAction %>" method="post" onsubmit="return validateForm()">
            <input type="hidden" name="user" value="<%= post.IdUser %>"></input>
            <input type="hidden" name="product" value="<%= post.IdProduct %>"></input>
            <input type="hidden" name="post_id" value="<%= post.IdPost %>"></input>

            <label for="title"><b>Edycja postu</b></label>
            <input type="text" placeholder="Text" name="text" value="<%= post.Text %>"></input>
            <button type="submit" class="submit" onclick="validateForm()">Edytuj</button>
            <button type="reset" class="resetbtn">Reset</button>
        </form>
    </main>

    <% include ../partials/page-end %>
