<!DOCTYPE html>
<html lang="pl-PL">

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="stylesheet" href="/css/stylePost.css" />
    <title><%= pageTitle %></title>
</head>

<% include ../partials/page-start %>

    <main>
        <h2> Wszystkie posty</h2>
        <div class="Posts">
            <fieldset>
                <legend>Posts</legend>

                <% postsList.forEach(function(post){ %>
                <div class="itemPost">
                    <div class="postInfo">
                    <img src="<%= post.UserPicture %>">
                    <div class="postDescribe">
                        <label class="text"><i><%= post.Text %><i></label><br>
                        <label class="author"><%= post.UserFirstName %> <%= post.UserLastName %></label> <br>
                        <label class="product">[<%= post.ProductName %> / <%= post.ProductVolume %>% / <%= post.ProductCapacity %>L / <%= post.ProductPrice %>zł]</label>
                    </div>
                    </div>
                    <div class="postAction">
                        <button class="edit" onclick="location.href='/posts/showEditForm?post_id=<%= post.IdPost %>'">Edycja</button>
                        <button class="delete" onclick="location.href='/posts/delete?post_id=<%= post.IdPost %>'">Usuń</button>
                    </div>
                </div>
                <hr />
                <% }) %>

            </fieldset>
        </div>

<% include ../partials/page-end %>